{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @task-management-system/backend with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "@task-management-system/backend"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/backend/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}
